<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/_9sdp"
    app:cardPreventCornerOverlap="false"
    android:id="@+id/bottomsheet"
    >
    <Button
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_5sdp"
        android:background="@drawable/custom_edittext"
        android:layout_gravity="top|center"
        android:layout_marginTop="@dimen/_15sdp"
        />
    <ImageView
        android:id="@+id/item_image1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/gaixinh2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/item_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Umi Chan"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_16sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_diachi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Pham Van Dong"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="@dimen/_25sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:background="@drawable/custom_button_tuoi"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="@dimen/_8sdp"
                    android:layout_height="@dimen/_8sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:src="@drawable/ic_action_female" />

                <TextView
                    android:id="@+id/item_tuoi1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="20"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/close"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_50sdp"
                android:background="@drawable/roundcorner"
                android:src="@drawable/ic_baseline_close_24"
                />

            <ImageButton
                android:id="@+id/tim1"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/roundcorner"
                android:src="@drawable/ic_baseline_favorite" />

            <ImageButton
                android:id="@+id/tim2"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="end"
                android:layout_marginLeft="@dimen/_50sdp"
                android:src="@drawable/ic_baseline_favorite_tim"
                android:background="@drawable/roundcorner" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>