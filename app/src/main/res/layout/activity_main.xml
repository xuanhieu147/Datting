<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/datting_background"
    tools:context=".activity.MainActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/icon_1" />

    <TextView
        android:id="@+id/tvLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Perfect Match"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:textStyle="bold"

        />

    <LinearLayout
        android:id="@+id/btnFacebook"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tvLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/custom_button_facebook"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_facebook" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="Continue with FaceBook"
            android:textAllCaps="false"
            android:textColor="@color/colorPWhite"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnGoogle"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btnFacebook"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/custom_button_google"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_google_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="19dp"
            android:text="Continue with Google"
            android:textAllCaps="false"
            android:textColor="@color/colorBlue"
            android:textSize="16dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGoogle"
        android:layout_alignEnd="@+id/btnGoogle"
        android:layout_alignRight="@+id/btnGoogle"
        android:layout_marginTop="8dp"
        android:text="We will never post anythings"
        android:textColor="@color/colorPWhite" />

    <Button
        android:id="@+id/btnPhone"
        android:background="@drawable/custom_button_transperent"
        android:layout_centerHorizontal="true"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGoogle"
        android:layout_marginTop="56dp"
        android:text="Sign up with Phone"
        android:textAllCaps="false"
        android:textColor="@color/colorPWhite"
        />
    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btnPhone"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="Continue with FaceBook"
            android:textAllCaps="false"
            android:textColor="@color/colorPWhite"
            android:textSize="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="@string/your_string_here"
            android:textAllCaps="false"
            android:textColor="@color/colorPWhite"

            android:textSize="16dp" />
    </LinearLayout>
</RelativeLayout>